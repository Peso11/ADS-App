<h1>My verified posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @verifieds.each do |verified| %>
      <tr>
        <td><%= verified.title %></td>
        <td><%= verified.description %></td>
        <td><%= link_to 'Destroy', verified, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>