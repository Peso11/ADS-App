<h1>My pending posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pendings.each do |pending| %>
      <tr>
        <td><%= pending.title %></td>
        <td><%= pending.description %></td>
        <td><%= link_to 'Destroy', pending, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>